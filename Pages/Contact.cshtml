    body {
        background-image: linear-gradient(-180deg, hsl(0,0%,89%),hsl(206,64%,73%));
    }
</style>
<!------ Include the above in your HEAD tag ---------->


@*<nav aria-label="breadcrumb" style="animation-duration: 1.3s;
animation-name: slidein;">*@

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page" style="text-decoration:none">Contact</li>
        </ol>
    </nav>


    <div class="container contact-form" style="border-radius: 25px; " >
        <div class="contact-image">
            <img src="https://i.ibb.co/6rRDJxV/message-1.png" alt="rocket_contact" style="border: 1px solid #f5f5f5; background-color: #91bbf4; " />
        </div>
        <form method="post">
            <h3>How Can We Help?</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="text" asp-for="theTicket.CustomerName" pattern="^[a-zA-Z][a-zA-Z ]{5,30}$" title="Username can only contain 5 - 30 alphabets, without special characters." class="form-control" placeholder="Your Name *" value="" maxlength="30" required />
                    </div>
                    <div class="form-group">
                        <input type="email" asp-for="theTicket.CustomerEmail" class="form-control" placeholder="Your Email *" maxlength="30" required />
                    </div>
                    <div class="form-group">
                        <input type="text" pattern="[0-9]{8}" title="Phone number has to be 8 digits in length." asp-for="theTicket.CustomerContact" class="form-control" placeholder="Your Phone Number *" maxlength="8" required />
                    </div>
                    <div class="form-group">
                        <input type="submit" name="btnSubmit" class="btnContact" value="Send Message" required />
                    </div>
                </div>
                <div class="col-md-6">

                    <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" />


                    <div class="form-group">
                        <textarea asp-for="theTicket.Problem" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;" minlength="30" required></textarea>
                    </div>
                </div>
            </div>
        </form>
    </div>






    <!-- Modal for successful login -->
    <div class="modal fade" id="successmodal" tabindex="-1" role="dialog" aria-labelledby="successful_loginLabel2" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#28d279;">
                    <h5 class="modal-title" id="successful_loginLabel" style="color: white">Success!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p style="color: #28d279;">
                        Your enquiry has been sent. We will respond within 1-3 business days =)!
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>





    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>





    @{
        var queryFasong = Request.Query["querySent"].ToString();



        if (queryFasong == "true")
        {
            <script>
                $('#successmodal').modal('show');
            </script>


        }

    }


    <script>

        grecaptcha.ready(function () {
            grecaptcha.execute('6LfLmX8dAAAAAGbTIkC40y7eHl9GptSMiJQDI8L8', { action: 'Login' }).then(function (token) {
                document.getElementById("g-recaptcha-response").value = token;
            });
        });
    </script>
