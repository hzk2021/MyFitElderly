@page
@model EDP_Project.Pages.Staff.Tickets.ResponseModel
@{
}




<link href="~/css/contact.css" rel="stylesheet" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<!------ Include the above in your HEAD tag ---------->

<div class="container contact-form" style="animation-duration: 1.3s; animation-name: slidein; border-radius: 25px;">
    <div class="contact-image">
        <img src="https://i.ibb.co/6rRDJxV/message-1.png" alt="rocket_contact" style="border: 1px solid #f5f5f5; background-color: #91bbf4" />
    </div>
    @{
        var mixmix = "RE: Ticket ID #" + Model.myTicket.Ticket_Reference_Id;
        var cname = Model.myTicket.CustomerEmail;
    }
    <form method="post">
        <h3>Compose a message</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="For" value="@cname" required />
                </div>
                <div class="form-group">
                    <input type="text" asp-for="mailSubject" class="form-control" value="@mixmix" placeholder="Subject" required />
                </div>
                <div class="form-group">
                    <input type="submit" style="width:100%" name="btnSubmit" class="btnContact" value="Send Message" required />
                </div>
            </div>
            <div class="col-md-6">
                @{


                    var mailContent = "Hi " + @cname + ", Thanks for contacting MyFitElderly!";
                }

                <div class="form-group">
                    <textarea id="textareax" asp-for="mailBody" class="form-control" placeholder="Your Message *" style="width: 100%; height: 150px;" minlength="30" required>
@mailContent
</textarea>
                </div>
            </div>
        </div>
    </form>
</div>






<!-- Modal for successful login -->
<div class="modal fade" id="successmodal" tabindex="-1" role="dialog" aria-labelledby="successful_loginLabel2" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#28d279;">
                <h5 class="modal-title" id="successful_loginLabel" style="color: white">Success!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="color: #28d279;">
                    Your enquiry has been sent. We will respond within 1-3 business days =)!
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>





<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>





@{
    var queryFasong = Request.Query["querySent"].ToString();



    if (queryFasong == "true")
    {
        <script>
            $('#successmodal').modal('show');
        </script>


    }

}




