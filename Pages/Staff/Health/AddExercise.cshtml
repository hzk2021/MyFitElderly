@page
@model EDP_Project.Pages.AddExerciseModel
@{
    ViewData["Title"] = "Add Exercise";
}

<form method="post">
    <div class="card">
        <h1 style="padding:2%;">Add new exercise record</h1>
        @if (!String.IsNullOrEmpty(Model.ErrorMsg))
        {
            <p class="alert alert-danger">@Model.ErrorMsg</p>
        }   
        <br />
        <div class="form-group">
            <label class="col-sm-2 col-form-label">Exercise Name</label>
            <input asp-for="ExerciseModel.ExerciseName" required />
            <span asp-validation-for="ExerciseModel.ExerciseName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label">Measurement Unit</label>
            <select asp-for="ExerciseModel.Measurement" required>
                <option value="km" selected>Distance (km)</option>
                <option value="s">Time (s)</option>
                <option value="rep">Reps</option>
            </select>
            <span asp-validation-for="ExerciseModel.Measurement" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-sm-2 col-form-label">Calories Burnt Per Unit</label>
            <input asp-for="ExerciseModel.CaloriesBurnPerUnit" required />
            <span asp-validation-for="ExerciseModel.CaloriesBurnPerUnit" class="text-danger"></span>
        </div>
    </div>
    <br style="margin-bottom:5%;" />

    <a asp-page="FoodList" class="btn btn-secondary">Discard</a>
    <input class="btn btn-success float-right" type="submit" value="Add to list" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
